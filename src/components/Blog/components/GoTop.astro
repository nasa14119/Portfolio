---
interface Props {
  fixed?: boolean;
}
const { fixed = true } = Astro.props as Props;
---

<script>
  function topFunction() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
  let div = document.querySelector("#go-top-div") as HTMLDivElement;
  window.onscroll = () => {
    document.body.scrollTop >= 20 || document.documentElement.scrollTop <= 23
      ? div.classList.add("hidden")
      : div.classList.remove("hidden");
  };
  div.onclick = topFunction;
</script>
<div
  class="absolute right-5 bottom-5 cursor-pointer px-2 hidden"
  id="go-top-div"
>
  <svg
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-6 h-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18"></path>
  </svg>
</div>
