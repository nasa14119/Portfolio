---
import {Dots} from "@assets/Icons"
import ButtonPrimary from "../App/ButtonPrimary.astro";
---
<section class="relative">
    <h1 class="text-secundary md:text-primary px-5 md:text-7xl text-left md:ml-5 text-[14vw] md:h-3/4 py-20 md:py-0">
        View <br>Proyects
