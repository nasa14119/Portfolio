---
import {ArrowDown} from "@assets/Icons"
import Nav from "../App/Navegation.astro"
---
<header class="relative h-full gradient-header">
    <Nav/> 
    <main class="flex flex-col justify-center items-center py-20 relative h-screen md:h-[130vh]">
        <h1 class="text-[4rem] text-left px-5 md:px-0 md:text-center md:text-[8vw]">
            Nicolas
        </h1>
        <h2 class="px-10 md:my-5 text-left md:bg-complementTwo md:w-3/5 md:text-[2rem] rounded-md">
            Front-End Developer
        </h2>
    </main>
    <span class="absolute bottom-3 inset-x-0 flex justify-center">
        <ArrowDown/> 
    </span>
</header>
<style>
    header {
        grid-area: header;
    }
    .gradient-header{
        @apply bg-gradient-to-b from-[#717171] to-80% from-10% md:from-[transparet]; 
    }
</style>